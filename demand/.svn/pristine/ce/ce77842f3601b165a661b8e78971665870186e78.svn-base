.img_upload {width:845px;}
.img_upload .img_head{width:100%;height:48;}
.img_upload .img_head li{width:100%;float:left;height:40px;display:inline-block;}
.img_upload .img_head li .btn{width:146px;height:28px;float:left;margin-top:5px;background-image:url('images/upload.png');}
.img_upload .img_head li .btn input{filter:alpha(opacity=0);-moz-opacity:0;opacity:0;width:146px;height:28px;}
.img_upload .img_head li .msg{float:left;padding-top:12px;padding-left:10px;color:red;}
.img_upload .img_head li .tip{float:right;padding-top:12px;padding-left:10px;color:red;font-weight: bold;}

.img_upload .img_body {max-width:100%;float:left;border:1px solid #CCC;}
.img_upload .img_body li{float:left;display:inline-block;}
.img_upload .img_body .pic {z-index:1;border:1px solid #CCC;position:relative;margin:5px;}
.img_upload .img_body .pic img {width:132px;height:132px;}
.img_upload .img_body .preview {display:none;height:132px;width:132px;}
.img_upload .img_body .default {z-index:2;}
.img_upload .img_body .default img {width:132px;height:132px;}
.img_upload .img_body .dis  {z-index:3;position:absolute;top:0;left:0;height:132px;width:132px;filter:alpha(opacity=1);-moz-opacity:0.01;opacity:0.01;background:#BBBBBB;}
.img_upload .img_body .mask {z-index:3;position:absolute;top:0;left:0;height:132px;width:132px;filter:alpha(opacity=50);-moz-opacity:0.5;opacity:0.5;background:#BBBBBB;}
.img_upload .img_body .desc {z-index:4;position:absolute;color:red;text-align:center;top:0;left:0;width:122px;max-height:122px;overflow:hidden;padding:5px;word-wrap:break-word;background:#BBBBBB;filter:alpha(opacity=80);-moz-opacity:0.8;opacity:0.8;}

.img_upload .img_body .operate {z-index:9; /*background:#BBBBBB;filter:alpha(opacity=80);-moz-opacity:0.8;opacity:0.8;*/text-align:center;padding:5px;position:absolute;top:0px;width:122px;}
.img_upload .img_body .operate i {background:url('images/operate.png');cursor:pointer;display:inline-block;font-size:0;height:12px;line-height:0;overflow:hidden;width:12px;float: right;}
.img_upload .img_body .operate .drag {background-position:0 0px;}
.img_upload .img_body .operate .del {background-position:-12px 0;}
.img_upload .img_body .has .preview {display:block;}
.img_upload .img_body .has .default {display:none;}