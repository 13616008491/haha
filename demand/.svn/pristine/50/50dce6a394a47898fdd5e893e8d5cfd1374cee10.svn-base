<div class="tab_edit">
    <form action="{:Url('area_submit')}" method="post" id="area_submit">
        <input type="hidden" name="parent_id" value="{$parent_id}"/>
        <table width="100%" class="list">
            <tr>
                <td class="t_r t_left_w">区域简称：</td>
                <td class="t_l">
                    {:widget("common/Input/input",array("acronym",null,true,false))}
                </td>
            </tr>
            <tr>
                <td class="t_r t_left_w">区域名称：</td>
                <td class="t_l">
                    {:widget("common/Input/input",array("area_name",null,true,false))}
                </td>
            </tr>
            <tr>
                <td class="t_r t_left_w">排序：</td>
                <td class="t_l">
                    {:widget("common/Input/input",array("order_by",0,true,false))}
                </td>
            </tr>
            <tr>
                <td class="t_r t_left_w"></td>
                <td class="t_l">
                    <div class="btn"><input type="submit" class="but_blue" value="保存信息"></div>
                </td>
            </tr>
        </table>
    </form>
</div>