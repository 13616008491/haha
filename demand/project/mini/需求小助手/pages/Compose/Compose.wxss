/* pages/Compose/Compose.wxss */

page {
  background: #f6f7f8;
}

.head-select {
	flex: 1;
  height: 50px;
  background-color: #ffffff;
  width: 100%-50rpx;
  margin: 25rpx;
}

.radio {
  font-size: 15px;
  transform:scale(0.8);
  padding-top: 15px;
}

.radio-sel{

  margin-right: 120rpx;
  margin-left: 20rpx;
}

.question-form {
  margin: 25rpx;
}

.question-input-area {
  background-color: #fff;
  border: 1rpx solid #f2f2f2;
  border-radius: 4rpx;
}

.question-title-wrap {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
}

.weui-cells_after-title {
  display: flex;
  align-items: center;
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
}

.question-title {
  flex: 1;
}

.weui-textarea-counter, .title-input-counter {
  color: #b3b3b3;
  font-size: 14px;
  padding-left: 10rpx;
}

.weui-cell::before, .weui-cells::before, .weui-cell::after, .weui-cells::after {
  border: none;
}

.question-images-area {
  padding: 40rpx 0;
  flex-wrap: wrap;
}

.question-images-tool {
  display: flex;
  align-items: center;
}

.question-images {
  flex-wrap: wrap;
  margin-top: 40rpx;
  overflow: hidden;
}

.q-image-wrap {
  float: left;
  width: 31%;
  margin-right: 10rpx;
}

.q-image {
  flex: 1;
  height: 200rpx;
  width: 100%;
}

.q-image-remover {
  text-align: center;
  color: #f00;
}


