/* pages/ProjectList/ProjectList.wxss */
.page {
	flex: 1;
  padding-top: 15px;
  padding-bottom: 5px;
  background-color: #eeeeee;
}
.page-section {
  background-color: #ffffff;
  padding: 30rpx;
  display: flex;
  position: relative;
}
.devider {
  display:flex; 
  height:2rpx; 
  width:100%;
  background-color: #eee;
}
.status-content {
  background-color: #fff;
  display: flex;
  width: 100%;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
  padding-left: 20rpx;
}
.page-section-status {
  background-color: #fff;
  justify-content:space-around;
  width: 30%;
  height: 50rpx;
  margin: 10rpx;
}
.page-section-status-num {
  background-color: #ffffff;
  display: flex;
  margin-bottom: 30rpx;
}
.page-section image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 8rpx; 
    background-color: #fff;
    align-items: flex-start;
}
.page-section dl{
    flex: 2;
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.page-section dt{
    font-size: 32rpx;
    color: #333;
    display: flex;
    justify-content: space-between;

}
.page-section dt i{
    font-size: 28rpx;
    color: #999;
}
.page-section dd{
    padding-top: 10rpx;
    font-size: 28rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-wrap: break-word;
    white-space: pre-wrap;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.text-total {
    font-size: 15px;
    color: #333;
}
.text-agree {
    font-size: 15px;
    color: #333;
}
.text-finish {
    font-size: 15px;
    color: #333;
}
.text-undetermined {
    font-size: 15px;
    color: #333;
}
.text-refused {
    font-size: 15px;
    color: #333;
    padding-bottom: 20px;
}