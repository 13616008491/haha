/* pages/Details/Details.wxss */


.lableStyle{

  color: #f00;
  font-size: 28px;
  width: 100%;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;

}

.header{

  flex: 1;
  background-color: #ffffff;
  margin: 25rpx;
}

.nameTitle{

  font-size: 14px;
  color: #323232;
  padding: 20rpx;

}

.contentTitle{

  font-size: 14px;
  color: #323232;
  padding: 0rpx 20rpx 20rpx 20rpx;

}

.content{

  flex: 1;
  background-color: #ffffff;
  margin: 25rpx;
}

.question-images-area {
  padding: 10rpx 0;
  flex-wrap: wrap;
}

.question-images {
  flex-wrap: wrap;
  margin-top: 10rpx;
  overflow: hidden;
}

.q-image {

  float: left;
  width: 29%;
  height: 200rpx;
  padding-left: 25rpx; 
  padding-top: 20rpx; 
}

.reason{

  color: #f00;
  font-size: 14px;
  padding: 20rpx;
}

