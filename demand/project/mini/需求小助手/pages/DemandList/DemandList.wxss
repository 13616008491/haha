.head-select {
	flex: 1;
  height: 50px;
  background-color: #ffffff;
}
.radio {
  font-size: 15px;
  transform:scale(0.8);
  padding-top: 15px;
}


.page {
	flex: 1;
  padding-bottom: 5px;
  background-color: #eeeeee;
  padding-top: 80rpx;
}
.page-section {
  background-color: #ffffff;
  margin: 10px;
  padding: 10px;
}
.devider {
  display:flex; 
  height:2rpx; 
  width:100%;
  margin:15rpx 0;
  background-color: #eee;
}
.page-section image{
    width: 60rpx;
    height: 60rpx;
}
.page-section dl{
    flex: 2;
    padding-left: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.page-section dt{
    font-size: 32rpx;
    color: #333;
    display: flex;
    justify-content: space-between;

}
.page-section dt dr{
    display: flex;
    align-items: center;
}
.page-section dt dr span{
  padding-left: 20rpx;
}
.page-section dt i{
    font-size: 28rpx;
    color: #999;
}
.page-section dt j{
    font-size: 28rpx;
    color: #ff0000;
    padding-left: 10rpx;
}
.page-section dt j2{
    font-size: 28rpx;
    color: #d16710;
    padding-left: 10rpx;
}
.page-section dt j3{
    font-size: 28rpx;
    color: #0ea88f;
    padding-left: 10rpx;
}
.page-section dd{
    padding-top: 10rpx;
    font-size: 28rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: pre-wrap;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
