.navbar{
  flex: none;
  display: flex;
  background: #fff;
  position:fixed;
  width: 100%;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #666
}
.navbar .item.active{
  color: #307eea;
  font-size: 30rpx;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #307eea;
}
